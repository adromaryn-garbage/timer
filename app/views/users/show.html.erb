<h1><%= @user.email %></h1>
<big>Your timezone: <%= Time.zone.name =%></big><br>
<%= link_to 'Edit timezone', time_zone_edit_path, class: "btn btn-primary" %><br>
<%= link_to 'New Event', new_event_path, class: "btn btn-primary" %><br>

<div>

  <table class="table">
    <thead>
      <tr>
        <th>Message</th>
        <th>Time</th>
        <th>Date</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.events.each do |event| %>
        <tr>
          <td><big><%= event.message %></big></td>
          <td><big><%= event.time.strftime("%H:%M:%S") %></big></td>
          <td><big><%= event.time.strftime("%Y-%m-%d") %></big></td>
          <td><big><%= event.phone_number %></big></td>
          <td>
          <%= link_to 'Show', event, class: "btn btn-success" %>
          <%= link_to 'Edit', edit_event_path(event), class: "btn btn-success" %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
