<h1><%= @user.email %></h1>

<p>Your timezone: <%= Time.zone.name =%> </p>
<%= link_to 'Edit', time_zone_edit_path %>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.events.each do |event| %>
      <tr>
        <td><%= event.message %></td>
        <td><%= event.time %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
